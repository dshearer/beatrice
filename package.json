{
  "name": "beatrice",
  "displayName": "Beatrice",
  "description": "AI-guided code tours",
  "version": "0.1.0",
  "publisher": "dshearer",
  "engines": {
    "vscode": "^1.108.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dshearer/beatrice"
  },
  "categories": [
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beatrice.installAgent",
        "title": "Beatrice: Install Agent Prompt"
      }
    ],
    "languageModelTools": [
      {
        "name": "beatrice_openFile",
        "toolReferenceName": "openFile",
        "displayName": "Open File",
        "modelDescription": "Opens a file in the editor at a specified line number. Use this to show code to the user during a tour.",
        "userDescription": "Opens a file at a specific line",
        "canBeReferencedInPrompt": true,
        "icon": "$(go-to-file)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "description": "Workspace-relative file path to open"
            },
            "line": {
              "type": "number",
              "description": "Line number to position cursor at (1-based)"
            },
            "endLine": {
              "type": "number",
              "description": "Optional end line for highlighting a range"
            }
          },
          "required": [
            "path"
          ]
        }
      },
      {
        "name": "beatrice_highlightLines",
        "toolReferenceName": "highlightLines",
        "displayName": "Highlight Lines",
        "modelDescription": "Highlights a range of lines in the active editor. Clears any previous highlight. Use this to draw attention to specific code.",
        "userDescription": "Highlights a range of lines in the editor",
        "canBeReferencedInPrompt": true,
        "icon": "$(selection)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "startLine": {
              "type": "number",
              "description": "Start line number (1-based)"
            },
            "endLine": {
              "type": "number",
              "description": "End line number (1-based)"
            }
          },
          "required": [
            "startLine",
            "endLine"
          ]
        }
      },
      {
        "name": "beatrice_navigateToLine",
        "toolReferenceName": "navigateToLine",
        "displayName": "Navigate to Line",
        "modelDescription": "Scrolls the active editor to center a specific line in the viewport without reopening the file.",
        "userDescription": "Scrolls to a specific line in the editor",
        "canBeReferencedInPrompt": true,
        "icon": "$(arrow-down)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "line": {
              "type": "number",
              "description": "Line number to center in viewport (1-based)"
            }
          },
          "required": [
            "line"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
